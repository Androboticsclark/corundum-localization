<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#5A5A5A"
				android:endColor="#6A6A6A"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#000000" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="0dp"
				android:right="10dp"
				android:bottom="0dp" />
		</shape>
	</item>
	<item android:state_pressed="true" >
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#080808"
				android:endColor="#6A6A6A"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#000000" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="0dp"
				android:right="10dp"
				android:bottom="0dp" />
		</shape>
	</item>

	<item android:state_pressed="false">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#6A6A6A"
				android:endColor="#080808"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#000000" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="0dp"
				android:right="10dp"
				android:bottom="0dp" />
		</shape>
	</item>
</selector>