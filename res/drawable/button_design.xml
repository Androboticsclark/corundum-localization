<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_enabled="false">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#2A2A2A"
				android:endColor="#4A4A4A"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#CACACA" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="0dp"
				android:right="10dp"
				android:bottom="0dp" />
			<size
				android:height="20dp"
				android:width="30dp" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#056BF5"
				android:endColor="#015EE6"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#CACACA" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="0dp"
				android:right="10dp"
				android:bottom="0dp" />
			<size
				android:height="20dp"
				android:width="30dp" />
		</shape>
	</item>

	<item android:state_pressed="false">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="#FFFFFF"
				android:endColor="#FFFFFF"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#CACACA" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="10dp"
				android:top="0dp"
				android:right="10dp"
				android:bottom="0dp" />
			<size
				android:height="20dp"
				android:width="30dp" />
		</shape>
	</item>
</selector>