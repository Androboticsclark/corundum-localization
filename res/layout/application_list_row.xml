<com.corundumPro.features.appsmanager.ApplicationListLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@drawable/list_selector_bg" >

	<!-- アイコン -->
	<ImageView
		android:id="@+id/application_list_row_ImageView1"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:contentDescription="@string/file_list_imageView1_desc" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<!-- アプリケーション名 -->
		<TextView
			android:id="@+id/application_list_row_TextView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:textColor="#000000"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"/>

		<!-- 詳細説明 -->
		<TextView
			android:id="@+id/application_list_row_TextView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="12sp"
			android:textColor="#666666"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"/>

	</LinearLayout>
</com.corundumPro.features.appsmanager.ApplicationListLayout>