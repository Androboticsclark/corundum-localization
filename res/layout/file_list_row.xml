<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/Corundum_LinearLayout_filelist" >

	<!-- アイコン -->
	<ImageView
		android:id="@+id/file_list_row_ImageView1"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:contentDescription="@string/file_list_imageView1_desc" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- ファイル名 -->
		<TextView
			android:id="@+id/file_list_row_TextView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:textColor="#000000"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"/>

		<!-- ファイルサイズ -->
		<TextView
			android:id="@+id/file_list_row_TextView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:textColor="#666666"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"/>

		<!-- 最終更新日時 -->
		<TextView
			android:id="@+id/file_list_row_TextView3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:textColor="#666666"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="0dp"
			android:paddingBottom="0dp"/>
	</LinearLayout>
</LinearLayout>