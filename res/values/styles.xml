<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<!-- LinearLayout -->
	<style name="Corundum_LinearLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">10.0dp</item>
		<item name="android:paddingBottom">10.0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">@drawable/menu_body_design</item>
	</style>

	<style name="Corundum_LinearLayout_WhiteList">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">10.0dp</item>
		<item name="android:paddingBottom">10.0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">#FFFFFF</item>
	</style>

	<!-- LinearLayout(action_sheet) -->
	<style name="Corundum_LinearLayout_action_sheet">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">#88AAAAAA</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- LinearLayout(menu top) -->
	<style name="Corundum_LinearLayout_menu_top">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">10.0dp</item>
		<item name="android:paddingBottom">10.0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">@drawable/menu_top_design</item>
	</style>

	<!-- LinearLayout(menu) -->
	<style name="Corundum_LinearLayout_menu">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">10.0dp</item>
		<item name="android:paddingBottom">10.0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">@drawable/menu_design</item>
	</style>

	<!-- LinearLayout(menu bottom) -->
	<style name="Corundum_LinearLayout_menu_bottom">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">10.0dp</item>
		<item name="android:paddingBottom">10.0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">@drawable/menu_bottom_design</item>
	</style>

	<style name="Corundum_LinearLayout_menu_bottom_WhiteList">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">10.0dp</item>
		<item name="android:paddingBottom">10.0dp</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:background">@drawable/whitelist_design</item>
	</style>

	<!-- LinearLayout(white list) -->
	<style name="Corundum_LinearLayout_whitelist">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingTop">5.0dp</item>
		<item name="android:paddingBottom">5.0dp</item>
		<item name="android:paddingLeft">10.0dp</item>
		<item name="android:paddingRight">10.0dp</item>
		<item name="android:background">@drawable/whitelist_design</item>
	</style>

	<!-- LinearLayout(file list) -->
	<style name="Corundum_LinearLayout_filelist">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">5.0dp</item>
		<item name="android:paddingBottom">5.0dp</item>
		<item name="android:paddingLeft">10.0dp</item>
		<item name="android:paddingRight">10.0dp</item>
		<item name="android:background">@drawable/whitelist_design</item>
	</style>

	<!-- LinearLayout(bar) -->
	<style name="Corundum_LinearLayout_bar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">5.0dp</item>
		<item name="android:paddingBottom">5.0dp</item>
		<item name="android:paddingLeft">10.0dp</item>
		<item name="android:paddingRight">10.0dp</item>
		<item name="android:background">@drawable/bar_design</item>
	</style>

	<!-- EditText URL -->
	<style name="Corundum_EditText_url">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:inputType">textUri</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">5.0dp</item>
		<item name="android:paddingRight">5.0dp</item>
		<item name="android:background">@drawable/edittext_design</item>
		<item name="android:maxLength">8190</item> <!-- URL最大長(Apache仕様に準拠) -->
	</style>

	<!-- EditText sec -->
	<style name="Corundum_EditText_sec">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">100dp</item>
		<item name="android:inputType">number</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">5.0dp</item>
		<item name="android:paddingRight">5.0dp</item>
		<item name="android:ems">10</item>
		<item name="android:maxLength">4</item>
		<item name="android:background">@drawable/edittext_design</item>
	</style>

	<!-- EditText アプリ名 -->
	<style name="Corundum_EditText_appname">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:inputType">text</item>
		<item name="android:singleLine">true</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingLeft">5.0dp</item>
		<item name="android:paddingRight">5.0dp</item>
		<item name="android:maxLength">50</item>
		<item name="android:background">@drawable/edittext_design</item>
	</style>

	<!-- EditText ファイル -->
	<style name="Corundum_EditText_file">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:inputType">textMultiLine</item>
		<item name="android:textSize">15sp</item>
		<item name="android:paddingLeft">5.0dp</item>
		<item name="android:paddingRight">5.0dp</item>
		<item name="android:background">@drawable/edittext_design</item>
	</style>

	<!-- ImageButton -->
	<style name="Corundum_ImageButton" parent="@android:style/Widget.ImageButton">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:background">@drawable/button_design</item>
	</style>

	<!-- ImageButtonBar -->
	<style name="Corundum_ImageButton_bar" parent="@android:style/Widget.ImageButton">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:background">@drawable/bar_button_design</item>
	</style>

	<!-- ProgressBar Large -->
	<style name="Corundum_ProgressBar_Large" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">30dp</item>
	</style>
	<style name="Corundum_LinearLayout_Progress_Large">
		<item name="android:layout_height">30dp</item>
		<item name="android:background">#00000000</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- ProgressBar Small -->
	<style name="Corundum_ProgressBar_Small" parent="@android:style/Widget.ProgressBar.Small">
		<item name="android:layout_width">15dp</item>
		<item name="android:layout_height">15dp</item>
	</style>
	<style name="Corundum_LinearLayout_Progress_Small">
		<item name="android:layout_height">20dp</item>
		<item name="android:background">#00000000</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- Button Large -->
	<style name="Corundum_Button_Large" parent="@android:style/Widget.Button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:drawableRight">@drawable/arrowhead_right</item>
		<item name="android:gravity">left|center</item>
		<item name="android:paddingLeft">15.0dp</item>
		<item name="android:paddingRight">15.0dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/button_design</item>
	</style>

	<!-- Button Small -->
	<style name="Corundum_Button_Small" parent="@android:style/Widget.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">10.0dp</item>
		<item name="android:paddingRight">10.0dp</item>
		<item name="android:background">@drawable/button_design</item>
	</style>

	<!-- Button action_sheet -->
	<style name="Corundum_Button_action_sheet" parent="@android:style/Widget.Button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10.0dp</item>
		<item name="android:background">@drawable/action_button_design</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#007AFF</item>
	</style>

	<!-- Button action_sheet_cancel -->
	<style name="Corundum_Button_action_sheet_cancel" parent="@android:style/Widget.Button">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10.0dp</item>
		<item name="android:background">@drawable/action_button_red_design</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#FD472B</item>
	</style>

	<!-- ButtonTopBar -->
	<style name="Corundum_Button_topbar" parent="@android:style/Widget.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/topbar_button_design</item>
	</style>

	<!-- ButtonBottomBar -->
	<style name="Corundum_Button_bottombar" parent="@android:style/Widget.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@drawable/button_text_color</item>
		<item name="android:background">@drawable/bottombar_button_design</item>
	</style>

	<!-- TextView Title(menu bar) -->
	<style name="Corundum_TextView_MenuBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:padding">5.0dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/menu_bar_design</item>
	</style>

	<style name="Corundum_TextView_MenuBar_WhiteList">
